<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="581.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.TableFormController">
   <children>
      <VBox layoutX="28.0" layoutY="76.0" spacing="5.0">
         <children>
            <Label text="Customer ID" />
            <TextField fx:id="txtID" promptText="Ex : C01" />
            <Label text="Customer Name" />
            <TextField fx:id="txtName" promptText="Ex : Srinath" />
            <Label text="Customer Address" />
            <TextField fx:id="txtAddress" promptText="Ex : Panadura" />
         </children>
      </VBox>
      <TableView fx:id="tblCustomers" layoutX="17.0" layoutY="252.0" prefHeight="249.0" prefWidth="567.0">
        <columns>
          <TableColumn prefWidth="75.0" text="ID" />
          <TableColumn prefWidth="246.0" text="Name" />
            <TableColumn prefWidth="245.0" text="Address" />
        </columns>
      </TableView>
      <Button fx:id="btnSaveCustomer" defaultButton="true" layoutX="219.0" layoutY="102.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="121.0" text="Save Customer" />
      <Button fx:id="btnNewCutomer" layoutX="28.0" layoutY="26.0" mnemonicParsing="false" style="-fx-background-color: green;" text="New Customer" textFill="WHITE" />
      <Button fx:id="btnDeleteCustomer" layoutX="219.0" layoutY="155.0" mnemonicParsing="false" style="-fx-background-color: #FF695F;" text="Delete Customer" />
   </children>
</AnchorPane>
